Adjacent Replacements
#include<bits/stdc++.h>
using namespace std;
const int MAXN=200005;
long long dp[MAXN],ans;
int n;
int main()
{
    while(scanf("%d",&n)!=EOF)
    {
        for (int i = 1; i <= n;i++)
        {
            scanf("%d", &ans);
            if(ans%2==0)
            {
                printf("%d ", ans-1);
            }
            else
            {
                printf("%d ", ans);
            }
        }
    }
}